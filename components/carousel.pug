//- carousel caption
mixin carousel-caption(item)
    .carousel-caption
        unless !item.h1
            h1 #{item.h1}
        unless !item.p
            p #{item.p}
        unless !item.button
            p
                a.btn.btn-lg.btn-primary(href="#{item.button.url}" role="button") #{item.button.caption}

//- carousel
mixin carousel(id, items)
    .carousel.slide(id=`carousel-${id}`, data-ride="carousel", data-interval="false", data-keyboard="true" )
        .carousel-inner(role="listbox")
            each item,index in items
                - let imgSrc = item.image;
                if(index === 0)
                    .item.active
                        img(src=imgSrc)
                        //span #{item.image}
                        //+carousel-caption(item)

                else
                    .item
                        img(src=imgSrc)
                        //+carousel-caption(item)

        //-  Controls
        a.left.carousel-control(href=`#carousel-${id}`, role="button", data-slide="prev")
            +icon("chevron-left")
            span.sr-only Previous
        a.right.carousel-control(href=`#carousel-${id}`, role="button", data-slide="next")
            +icon("chevron-right")
            span.sr-only Next
